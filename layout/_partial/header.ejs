<div class="hero" style="margin-top:3.25rem">
  <div class="hero-body has-text-centered">
    <div class="box has-bg-shadow" style="padding-left:0;padding-right:0;padding-top:0;padding-bottom:1.1rem;">
      <div class="media">
        <figure class="image">
          <img src="<%= url_for(theme.cover_page) %>" style="border-top-left-radius:6px;border-top-right-radius:6px;" alt="<%- config.title %>">
        </figure>
      </div>
      <figure id="profile_pic" class="image is-128x128 has-image-centered">
        <img class="is-rounded" src="<%= url_for(theme.profile_pic) %>" alt="profile pic" style="background: white;padding: 4px">
        <h1 class="title" style="margin-top:1.1rem;"> <%= config.title %> </h1>
      </figure>
      <h2 class="subtitle" style="padding-right: 1em;padding-left: 1em"> <% if (config.description){ %><%= config.description %><% } %> </h2>
    </div>
  </div>
</div>
